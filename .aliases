# basic OSX aliases
alias ls='ls -Gp'
alias ll='ls -FGlAhp'
alias la='ls -lah'
alias lt='ls -lth'
alias lss='ls -lSh'
alias less='less -R'

# edit configs
alias zshconfig='subl ~/.zshrc'
alias preztoconfig='subl ~/.zpreztorc'
alias aliases='subl ~/.aliases'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Frequent commands
alias e='exit'
alias cd..='cd ..'
alias trash='rmtrash'
alias ...='cd ../..'
alias ....='cd ../../..'

# Git
alias ga='git add'
alias gd='git difftool'
alias gst='git status'
alias gp='git push'
alias gu='git pull'
alias gc='git commit --verbose'
alias gcm='git commit --message'
alias gca='git commit --amend'
alias gs='git stash'
alias gsa='git stash apply'
alias gl="git log --graph --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

# Programs
alias rstudio='open -a Rstudio'
alias R='R --no-save'

# Special commands
alias rmspaces="rename 'y/ /_/' *"
alias gen_shiny='touch app.R global.R server.R ui.R'
alias inventory='sort | uniq -c | sort -n'
