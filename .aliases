# basic OSX aliases
alias ls='ls -G'
alias ll='ls -FGlAhp'
alias la='ls -la'
alias lt='ls -lt'
alias less='less -R'
alias zshconfig='subl ~/.zshrc'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# Frequent commands
alias e='exit'
alias cd..='cd ..'
alias trash='rmtrash'

# Programs
alias rstudio='open -a Rstudio'
alias R='R --no-save'

# Special commands
